            <div class="container-fluid">
                <div class="container">
                <div class="header">
                    <h2 class="title">Unesi Vrijeme</h2>
                </div>
                <div class="body">
                    <form action="/edit/addTime" method="post">
                        <div class="formInsert">
                            <div class="form-group" style="display: none">
                                <input type="text" class="form-control" id="userId"  name="userId" value="<%= user_id%>">
                            </div>
                            <div class="form-group">
                                <div class="time">
                                    <div>
                                        <label for="hours">Sati:</label>
                                        <input type="number" class="form-control" id="hours"  name="hours"  required>
                                    </div>
                                    <div>
                                        <label for=minutes">Minute:</label>
                                        <input type="number" class="form-control" id="minutes"  name="minutes"  required>
                                    </div>
                                </div>
                                <div class="valid-feedback">Validno.</div>
                                <div class="invalid-feedback">Ovo polje je obavezno!</div>
                            </div>
                            <div class="form-group">
                                <label>Projekat: </label>
                                <div class="project" >
                                    <% projects.forEach(function (project) {%>
                                    <input type="radio" id="project<%project.project_name%>" name="projectId" value="<%= project.project_id%>" required>
                                    <label for="project<%= project.project_id%>"><%= project.project_name%></label>
                                    <%});%>
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <button type="button" class="btn btn-outline-danger">Obri≈°i</button>
                            <button type="submit" class="btn btn-success">Podnesi</button>

                        </div>
                    </form>
                </div>
                </div>
            </div>



</body>
</html>


